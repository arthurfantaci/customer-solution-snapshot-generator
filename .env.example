# Customer Solution Snapshot Generator - Environment Configuration
# Copy this file to .env and update with your actual values

# API Keys - Replace with your actual keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
VOYAGEAI_API_KEY=your_voyage_api_key_here  # Optional, for RAG features

# Model Configuration
DEFAULT_MODEL=claude-sonnet-4-5-20250929
MAX_TOKENS=4000
TEMPERATURE=0.0

# File Processing Settings
MAX_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_EXTENSIONS=.vtt,.txt,.md,.html
CHUNK_SIZE=500
CHUNK_OVERLAP=100

# Security Settings
DEBUG=false
ENABLE_FILE_VALIDATION=true
SANITIZE_FILENAMES=true

# Logging Settings
LOG_LEVEL=INFO

# NLP Settings
SPACY_MODEL=en_core_web_sm
MIN_ENTITY_FREQUENCY=2
MIN_ENTITY_LENGTH=3

# Memory Optimization Settings
MEMORY_LIMIT_MB=1024          # Maximum memory usage in MB
STREAMING_THRESHOLD_MB=10     # File size threshold for streaming (MB)
GC_FREQUENCY=1000            # Garbage collection frequency
