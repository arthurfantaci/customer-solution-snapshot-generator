# Customer Solution Snapshot Generator - Environment Configuration
# Copy this file to .env and update with your actual values

# API Keys - Replace with your actual keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
VOYAGEAI_API_KEY=your_voyage_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here

# Model Configuration
DEFAULT_MODEL=claude-3-5-sonnet-20240620
MAX_TOKENS=4000
TEMPERATURE=0.0

# File Processing Settings
MAX_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_EXTENSIONS=.vtt,.txt,.md,.html
CHUNK_SIZE=500
CHUNK_OVERLAP=100

# Security Settings
DEBUG=false
ENABLE_FILE_VALIDATION=true
SANITIZE_FILENAMES=true

# Logging Settings
LOG_LEVEL=INFO

# NLP Settings
SPACY_MODEL=en_core_web_sm
MIN_ENTITY_FREQUENCY=2
MIN_ENTITY_LENGTH=3

# Memory Optimization Settings
ENABLE_MEMORY_MONITORING=true
MEMORY_LIMIT_MB=1024          # Maximum memory usage in MB
STREAMING_THRESHOLD_MB=10     # File size threshold for streaming (MB)
GC_FREQUENCY=1000            # Garbage collection frequency
ENABLE_MEMORY_PROFILING=false # Enable detailed memory profiling (dev only)

# Performance Monitoring Settings
PERFORMANCE_MONITORING=true
BENCHMARK_INTERVAL=3600      # Benchmark every hour (seconds)
ALERT_MEMORY_THRESHOLD=80    # Alert when memory usage > 80%
ALERT_CPU_THRESHOLD=85       # Alert when CPU usage > 85%

# Docker Settings (for containerized deployments)
DOCKER_MEMORY_LIMIT=2048     # Container memory limit in MB
DOCKER_CPU_LIMIT=2.0         # Container CPU limit (cores)
HEALTHCHECK_INTERVAL=30      # Health check interval in seconds